<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_chat_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/fragment_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_chat_image"
        android:layout_toEndOf="@+id/fragment_chat_image"
        android:text="@string/display_name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/fragment_chat_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_chat_name"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/fragment_chat_image"
        android:text="last message"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/fragment_chat_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:text="@string/last_seen"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fragment_chat_last_seen"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_action_name"/>
</RelativeLayout>